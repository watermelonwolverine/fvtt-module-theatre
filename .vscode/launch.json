{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "FoundryVTT",
      "sourceMaps": true,
      "port": 9222,
      "url": "http://localhost:30000/game",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--app=http://localhost:30000"
      ],
      "webRoot": "${workspaceFolder}",
			"sourceMapPathOverrides": {
        "webpack:///./~/*": "${webRoot}/node_modules/*",      
        "webpack:///./*":   "${webRoot}/*",                    
        "webpack:///*":     "*",                               
        "theatre/./~/*": "${webRoot}/node_modules/*",       
        "theatre/./*":   "${webRoot}/*",                    
        "theatre/*":     "*",       
			}
    }
  ]
}